@page "/forms"

<PageTitle>Forms</PageTitle>

<div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Form Components</h1>

    <div class="card bg-base-100 shadow-xl mb-8">
        <div class="card-body">
            <h2 class="card-title text-2xl mb-6">Contact Form</h2>

            <div class="space-y-4">
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Full Name</span>
                    </label>
                    <input type="text" class="input input-bordered" placeholder="John Doe"/>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Email Address</span>
                    </label>
                    <input type="email" class="input input-bordered" placeholder="john@example.com"/>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Message</span>
                    </label>
                    <textarea rows="4" class="textarea textarea-bordered" placeholder="Your message..."></textarea>
                </div>

                <div class="form-control">
                    <label class="label cursor-pointer justify-start gap-2">
                        <input type="checkbox" class="checkbox checkbox-primary"/>
                        <span class="label-text">I agree to the terms and conditions</span>
                    </label>
                </div>

                <button class="btn btn-primary w-full">Send Message</button>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="card bg-gradient-to-br from-green-400 to-blue-500 text-white shadow-xl">
            <div class="card-body">
                <h3 class="card-title">Newsletter</h3>
                <p>Subscribe to our newsletter for updates</p>
                <div class="join">
                    <input type="email" class="input input-bordered join-item flex-1" placeholder="Email"/>
                    <button class="btn btn-neutral join-item">Join</button>
                </div>
            </div>
        </div>

        <div class="card bg-base-100 shadow-xl border-2 border-dashed">
            <div class="card-body">
                <h3 class="card-title">File Upload</h3>
                <div class="border-2 border-dashed rounded-lg p-8 text-center hover:border-primary transition cursor-pointer">
                    <div class="text-4xl mb-2">üìÅ</div>
                    <p>Click to upload or drag and drop</p>
                    <p class="text-sm opacity-60 mt-1">PNG, JPG up to 10MB</p>
                </div>
            </div>
        </div>
    </div>
</div>
