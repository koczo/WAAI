@using WAAI.Core.Components

<div class="space-y-4">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Personal Information</h2>
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Full Name <span class="text-red-500">*</span></label>
        <InputText @bind-Value="Model.FullName" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none" placeholder="John Doe" />
        <ValidationMessageWithTooltip For="@(() => Model.FullName)" />
    </div>
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Email <span class="text-red-500">*</span></label>
        <InputText @bind-Value="Model.Email" type="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none" placeholder="john@example.com" />
        <ValidationMessageWithTooltip For="@(() => Model.Email)" />
    </div>
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Phone <span class="text-red-500">*</span></label>
        <InputText @bind-Value="Model.Phone" type="tel" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none" placeholder="+1 234 567 890" />
        <ValidationMessageWithTooltip For="@(() => Model.Phone)" />
    </div>
</div>

@code {
    [CascadingParameter] public EditContext EditContext { get; set; } = null!;
    private PersonalInfo Model => (PersonalInfo)EditContext.Model;
}
