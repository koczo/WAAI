@using WAAI.Core.Components
<div class="space-y-4">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Account Details</h2>
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Username <span class="text-red-500">*</span></label>
        <InputText @bind-Value="Model.Username" class="mt-1 block w-full rounded-md" placeholder="johndoe"/>
        <ValidationMessageWithTooltip For="@(() => Model.Username)"/>
    </div>
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Password <span class="text-red-500">*</span></label>
        <InputText @bind-Value="Model.Password" type="password" class="mt-1 block w-full rounded-md" placeholder="••••••••"/>
        <ValidationMessageWithTooltip For="@(() => Model.Password)"/>
    </div>
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Confirm Password <span class="text-red-500">*</span></label>
        <InputText @bind-Value="Model.ConfirmPassword" type="password" class="mt-1 block w-full rounded-md" placeholder="••••••••"/>
        <ValidationMessageWithTooltip For="@(() => Model.ConfirmPassword)"/>
    </div>
</div>
