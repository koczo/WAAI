@page "/"
@inject NavigationManager Navigation

<PageTitle>Home</PageTitle>

<div class="hero min-h-screen bg-cover bg-center" style="background-image: url(https://images.unsplash.com/photo-1451187580459-43490279c0fa?w=1920&q=80);">
    <div class="hero-overlay bg-opacity-60"></div>
    <div class="hero-content text-center text-neutral-content">
        <div class="max-w-md">
            <h1 class="mb-5 text-5xl font-bold">Hello, world!</h1>
            <p class="mb-5">Welcome to your new app. Start building amazing things with Blazor WebAssembly and daisyUI.</p>
            <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/onboarding"))">Get Started</button>
        </div>
    </div>
</div>