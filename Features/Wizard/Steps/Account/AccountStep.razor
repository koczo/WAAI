<div class="space-y-4">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Account Details</h2>
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Username <span class="text-red-500">*</span></label>
        <InputText @bind-Value="Model.Username" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none" placeholder="johndoe" />
        <ValidationMessage For="@(() => Model.Username)" class="text-red-500 text-sm mt-1" />
    </div>
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Password <span class="text-red-500">*</span></label>
        <InputText @bind-Value="Model.Password" type="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none" placeholder="••••••••" />
        <ValidationMessage For="@(() => Model.Password)" class="text-red-500 text-sm mt-1" />
    </div>
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Confirm Password <span class="text-red-500">*</span></label>
        <InputText @bind-Value="Model.ConfirmPassword" type="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none" placeholder="••••••••" />
        <ValidationMessage For="@(() => Model.ConfirmPassword)" class="text-red-500 text-sm mt-1" />
    </div>
</div>

@code {
    [CascadingParameter] public EditContext EditContext { get; set; } = null!;
    private AccountInfo Model => (AccountInfo)EditContext.Model;
}
