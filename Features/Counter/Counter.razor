@page "/counter"

<PageTitle>Counter</PageTitle>

<div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Counter</h1>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="card bg-gradient-to-br from-primary to-secondary text-primary-content shadow-xl">
            <div class="card-body items-center text-center">
                <h2 class="card-title text-2xl mb-4">Current Count</h2>
                <div class="text-8xl font-bold mb-6">@_currentCount</div>
                <div class="flex gap-2">
                    <button class="btn btn-circle btn-lg" @onclick="DecrementCount">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/></svg>
                    </button>
                    <button class="btn btn-circle btn-lg btn-neutral" @onclick="ResetCount">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
                    </button>
                    <button class="btn btn-circle btn-lg" @onclick="IncrementCount">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
                    </button>
                </div>
            </div>
        </div>

        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="card-title">Settings</h2>
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Step Size</span>
                    </label>
                    <input type="number" @bind="_step" class="input input-bordered" min="1"/>
                </div>
                <div class="divider"></div>
                <h3 class="font-semibold mb-2">Statistics</h3>
                <div class="stats stats-vertical shadow">
                    <div class="stat">
                        <div class="stat-title">Total Clicks</div>
                        <div class="stat-value text-primary">@_totalClicks</div>
                    </div>
                    <div class="stat">
                        <div class="stat-title">Highest Value</div>
                        <div class="stat-value text-secondary">@_maxValue</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int _currentCount;
    private int _step = 1;
    private int _totalClicks;
    private int _maxValue;

    private void IncrementCount()
    {
        _currentCount += _step;
        _totalClicks++;
        if (_currentCount > _maxValue) _maxValue = _currentCount;
    }

    private void DecrementCount()
    {
        _currentCount -= _step;
        _totalClicks++;
    }

    private void ResetCount()
    {
        _currentCount = 0;
    }
}