@page "/animations/text"

<PageTitle>Text Animations</PageTitle>

<div class="max-w-7xl mx-auto">
    <div class="flex items-center justify-between mb-8">
        <div class="flex items-center gap-4">
            <a href="/animations" class="btn btn-circle btn-sm">‚Üê</a>
            <h1 class="text-4xl font-bold">üìù Text Effects</h1>
        </div>
        <button class="btn btn-primary btn-sm" @onclick="RestartAnimations">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
            </svg>
            Restart
        </button>
    </div>

    @if (showContent)
    {
        <div class="space-y-12">
        <section>
            <h2 class="text-2xl font-bold mb-4">Focus & Blur</h2>
            <div class="space-y-4">
                <h3 class="text-4xl font-bold animate-text-focus-in">Focus In</h3>
                <h3 class="text-4xl font-bold animate-text-blur-out">Blur Out</h3>
            </div>
        </section>

        <section>
            <h2 class="text-2xl font-bold mb-4">Typing Effect</h2>
            <h3 class="text-4xl font-bold animate-typing">Typing Effect...</h3>
        </section>

        <section>
            <h2 class="text-2xl font-bold mb-4">Gradient Flow</h2>
            <h3 class="text-4xl font-bold animate-gradient bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent">Gradient Flow</h3>
        </section>

        <section>
            <h2 class="text-2xl font-bold mb-4">Text Tracking</h2>
            <div class="space-y-4">
                <h3 class="text-3xl font-bold animate-tracking-in">Tracking In</h3>
                <h3 class="text-3xl font-bold animate-tracking-out">Tracking Out</h3>
                <h3 class="text-3xl font-bold animate-text-pop-up">Pop Up!</h3>
            </div>
        </section>

        <section>
            <h2 class="text-2xl font-bold mb-4">Complex Animations</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="card bg-gradient-to-br from-primary to-secondary text-primary-content shadow-2xl animate-float">
                    <div class="card-body">
                        <h3 class="card-title">Floating Card</h3>
                        <p>Smooth floating animation</p>
                    </div>
                </div>
                <div class="card bg-gradient-to-br from-accent to-secondary text-accent-content shadow-2xl animate-tilt">
                    <div class="card-body">
                        <h3 class="card-title">Tilting Card</h3>
                        <p>3D tilt effect</p>
                    </div>
                </div>
            </div>
        </section>
        </div>
    }
</div>

@code {
    private bool showContent = true;

    private async Task RestartAnimations()
    {
        showContent = false;
        StateHasChanged();
        await Task.Delay(50);
        showContent = true;
        StateHasChanged();
    }
}
