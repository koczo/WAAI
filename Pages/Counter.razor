@page "/counter"

<PageTitle>Counter</PageTitle>

<div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-gray-800 mb-6">Counter</h1>
    <p class="text-xl text-gray-700 mb-4" role="status">Current count: <span class="font-bold text-indigo-600">@currentCount</span></p>
    <button class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-6 py-3 rounded-lg shadow-md transition" @onclick="IncrementCount">Click me</button>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

}